<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:id="@+id/l2"
    android:background="@color/bg6"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/home_avatar"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:background="@color/bg4"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:text="F-Name"
                android:textSize="20dp"
                android:paddingTop="12dp"
                android:paddingLeft="20dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
            <TextView
                android:layout_width="0dp"
                android:text=" Mr. Nilay"
                android:textSize="20dp"
                android:paddingTop="12dp"
                android:paddingLeft="5dp"
                android:layout_height="match_parent"
                android:layout_weight="2"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:background="@color/bg4"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:text="L-Name"
                android:textSize="20dp"
                android:paddingTop="12dp"
                android:paddingLeft="20dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/textView"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:paddingLeft="5dp"
                android:paddingTop="12dp"
                android:text="Patel"
                android:textSize="20dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:background="@color/bg4"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:text="Contact"
                android:textSize="20dp"
                android:paddingTop="12dp"
                android:paddingLeft="20dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
            <TextView
                android:layout_width="0dp"
                android:text="9978224432"
                android:textSize="20dp"
                android:paddingTop="12dp"
                android:paddingLeft="5dp"
                android:layout_height="match_parent"
                android:layout_weight="2"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:background="@color/bg4"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:text="E-mail"
                android:textSize="20dp"
                android:paddingTop="12dp"
                android:paddingLeft="20dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
            <TextView
                android:layout_width="0dp"
                android:text="patelnilay20@gmail.com"
                android:textSize="20dp"
                android:paddingTop="12dp"
                android:paddingLeft="5dp"
                android:layout_height="match_parent"
                android:layout_weight="2"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="5dp"
            android:background="@color/bg4"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:text="Address"
                android:textSize="20dp"
                android:paddingTop="12dp"
                android:paddingLeft="20dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
            <TextView
                android:layout_width="0dp"
                android:text="patelnilay20@gmail.com"
                android:textSize="20dp"
                android:paddingTop="12dp"
                android:paddingLeft="5dp"
                android:layout_height="match_parent"
                android:layout_weight="2"/>
        </LinearLayout>
        <Button
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:text="Update Profile"
            android:id="@+id/btn_profile"
            android:textSize="20dp"
            android:textColor="@color/bg6"
            android:background="@drawable/edittext1"
            android:layout_height="wrap_content" />
    </LinearLayout>
    </ScrollView>
</RelativeLayout>
