<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    card_view:cardCornerRadius="0dp"
    android:paddingBottom="5dp"
    card_view:cardBackgroundColor="@color/bg4">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="125dp"
            android:orientation="vertical"
            android:layout_marginBottom="0dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:text="5"
                android:id="@+id/qtycheck"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/count"
                android:visibility="gone"/>
            <ImageView
                android:layout_width="90dp"
                android:id="@+id/h_p_image"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="0dp"
                android:layout_marginTop="7dp"
                android:layout_height="110dp" />
         <TextView
                android:layout_width="wrap_content"
                android:layout_gravity="center"
             android:layout_marginRight="0dp"
             android:layout_marginBottom="5dp"
                android:text="1 Unit"
             android:textSize="10dp"
                android:textAlignment="center"
                android:background="@drawable/edittext8"
                android:layout_marginTop="5dp"
                android:id="@+id/h_p_unit"
                android:textColor="@color/black"
                android:layout_height="25dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/odeidtest"
                android:visibility="gone" />
            <!--<LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:layout_marginLeft="30dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/edittext2">

                <Spinner
                    android:id="@+id/spinner1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    >
                </Spinner>

            </LinearLayout>-->
        </LinearLayout>
        <RelativeLayout
            android:layout_marginBottom="12dp"
            android:layout_width="138dp"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/l1"
                android:layout_width="match_parent"
                android:layout_marginTop="5dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:text="Save "
                    android:textStyle="bold"
                    android:textColor="@color/red" />

                <TextView
                    android:id="@+id/h_p_offer"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:text="0"
                    android:textAlignment="center"
                    android:textColor="@color/red"
                    android:textSize="17dp"
                    android:textStyle="bold" />
            </LinearLayout>
            <LinearLayout
                android:layout_below="@id/l1"
                android:id="@+id/l2"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginTop="15dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:maxLines="2"
                    android:text="Product Name"
                    android:id="@+id/h_p_name"
                    android:textColor="@color/bg3"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/l3"
                android:layout_marginTop="5dp"
                android:layout_below="@id/l2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#545454"
                    android:text="MRP : "/>
                <TextView
                    android:layout_width="wrap_content"
                    android:text="\u20B9"
                    android:textColor="#545454"
                    android:layout_marginRight="3dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="wrap_content"
                    android:text="304"
                    android:textColor="#545454"
                    android:id="@+id/h_p_actual_cost"
                    android:background="@drawable/strike"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="8dp"
                android:id="@+id/l4"
                android:layout_below="@id/l3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorAccent"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:text="App : "/>
                <TextView
                    android:layout_width="wrap_content"
                    android:text="\u20B9 "
                    android:textSize="15dp"
                    android:textColor="@color/colorAccent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="wrap_content"
                    android:text="304"
                    android:textSize="15dp"
                    android:id="@+id/h_p_offer_cost"
                    android:textStyle="bold"
                    android:textColor="@color/colorAccent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:visibility="gone"
                android:id="@+id/cartadd_min"
                android:layout_below="@id/l4"
                android:layout_marginTop="33dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/c_minus"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:text="-"
                    android:textAlignment="center"
                    android:background="@drawable/circle_receive_bg"
                    android:textColor="@color/bg1" />

                <TextView
                    android:id="@+id/c_quantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="13dp"
                    android:layout_marginRight="13dp"
                    android:text="10"
                    android:textColor="@color/bg3" />

                <Button
                    android:id="@+id/c_plus"
                    android:textAlignment="center"
                    android:layout_width="25dp"
                    android:background="@drawable/circle_receive_bg"
                    android:layout_height="25dp"
                    android:layout_marginRight="15dp"
                    android:text="+"
                    android:textColor="@color/bg1" />

            </LinearLayout>

            <Button
                android:layout_below="@id/l4"
                android:id="@+id/h_p_add"
                android:layout_width="wrap_content"
                android:layout_height="27dp"
                android:layout_marginTop="33dp"
                android:background="@drawable/edittext7"
                android:text="ADD to cart"
                android:textColor="@color/white"
                android:textSize="13dp" />
        </RelativeLayout>
        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="@color/bg6"/>
    </LinearLayout>
</android.support.v7.widget.CardView>