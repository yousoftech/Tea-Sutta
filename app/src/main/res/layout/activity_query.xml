<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="com.tesuta.shopping.Query">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_margin="20dp"
        android:id="@+id/call_query"
        android:background="@color/switch_thumb_normal"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:background="@drawable/btn_help_call"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:layout_margin="10dp"
            android:layout_gravity="center"
            android:text="For any queries,click here to call us"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="30dp">
        <com.zl.reik.dilatingdotsprogressbar.DilatingDotsProgressBar
            android:id="@+id/progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:radius="8dp"
            android:layout_gravity="center"
            android:color="@color/colorPrimary"
            app:dd_numDots="3"
            app:dd_scaleMultiplier="1.5"
            app:dd_animationDuration="500"
            app:dd_horizontalSpacing="4dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/white"
        android:layout_weight="1">

        <EditText
            android:layout_marginTop="10dp"
            android:hint="If you have any query or feedback, write ie it here..."
            android:inputType="textMultiLine"
            android:id="@+id/edt_message"
            android:layout_height="match_parent"
            android:lines="8"
            android:padding="20dp"
            android:minLines="4"
            android:gravity="top|left"
            android:maxLines="10"
            android:layout_width="fill_parent"
            android:scrollbars="vertical"/>
    </LinearLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SEND"
        android:id="@+id/btn_updatepassword"
        android:textSize="20dp"
        android:background="@color/Yellow"/>
</LinearLayout>
